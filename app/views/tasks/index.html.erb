<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<%= link_to "New task", new_task_path, :class => "btn btn-primary" %>
<br/>
<br/>
<div id="tasks">
  <table class="table table-striped">
    <thead>
      <th> Prompt </th>
      <th> Completion </th>
    </thead>
    <% @tasks.each do |task| %>
      <tr>
        <td> <%= task.prompt %></td>
        <td> <%= task.completion %></td>
      </tr>
    <% end %>
  </table>
</div>


